#!/bin/sh

set -eu

python_arch() {
  case "$(uname -i)" in
    x86_64)
      echo "x86_64-linux-gnu"
      ;;
    *)
      echo "aarch64-linux-gnu"
      ;;
  esac
}

(
  cd "${ASDF_INSTALL_PATH}"
  curl -sSL "https://releases.twuni.dev/python/${ASDF_INSTALL_VERSION}/$(python_arch)/python-${ASDF_INSTALL_VERSION}-$(python_arch).tar.gz" | tar xvzf -
)
